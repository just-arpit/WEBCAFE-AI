rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Conversations collection
    match /conversations/{conversationId} {
      // Users can read their own conversations
      allow read: if isAuthenticated() && 
                     resource.data.ownerUid == request.auth.uid;
      
      // Users can create conversations for themselves
      allow create: if isAuthenticated() && 
                       request.resource.data.ownerUid == request.auth.uid &&
                       request.resource.data.visibility in ['private', 'shared'] &&
                       request.resource.data.keys().hasAll(['ownerUid', 'createdAt', 'lastUpdatedAt', 'title', 'visibility']);
      
      // Users can update their own conversations (e.g., title, lastUpdatedAt)
      allow update: if isAuthenticated() && 
                       resource.data.ownerUid == request.auth.uid;
      
      // Users can delete their own conversations
      allow delete: if isAuthenticated() && 
                       resource.data.ownerUid == request.auth.uid;
      
      // Messages subcollection
      match /messages/{messageId} {
        // Users can read messages in their own conversations
        allow read: if isAuthenticated() && 
                       get(/databases/$(database)/documents/conversations/$(conversationId)).data.ownerUid == request.auth.uid;
        
        // Users can create messages in their own conversations
        // Must be user role with their own uid
        allow create: if isAuthenticated() && 
                         get(/databases/$(database)/documents/conversations/$(conversationId)).data.ownerUid == request.auth.uid &&
                         request.resource.data.role == 'user' &&
                         request.resource.data.senderUid == request.auth.uid &&
                         request.resource.data.keys().hasAll(['text', 'senderUid', 'role', 'createdAt']);
        
        // Users can update their own messages (for edits)
        // Cloud Functions using Admin SDK bypass these rules and can update assistant messages
        allow update: if isAuthenticated() && 
                         resource.data.senderUid == request.auth.uid;
        
        // Users can delete their own messages
        allow delete: if isAuthenticated() && 
                         resource.data.senderUid == request.auth.uid;
      }
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
